<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gear_summary_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue"
    android:backgroundTint="@color/colorDarkBlue">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/colorGrey"
        android:layout_marginBottom="15dp"
        android:text="La Sportiva Tarantulaces"
        android:textAlignment="center"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/title_text_view"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:textColor="@color/colorGrey"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp"
        android:minLines="10"
        android:text="@string/demo_item_description"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/item_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/divider"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/description_text_view"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/ic_gear" />

    <TextView
        android:id="@+id/stock_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_item_button"
        android:layout_below="@id/item_photo"
        android:layout_alignStart="@id/item_photo"
        android:layout_alignEnd="@id/item_photo"
        android:textColor="@color/colorGrey"
        android:text="@string/demo_stock_information"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/condition_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text_view"
        android:layout_alignStart="@id/description_text_view"
        android:textColor="@color/colorGrey"
        android:text="@string/condition"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/current_condition_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text_view"
        android:layout_alignEnd="@id/description_text_view"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/condition_text_view"
        android:background="@color/colorGreen"
        android:paddingHorizontal="5dp"
        android:text="@string/condition_new"
        android:textSize="18sp" />

    <Button
        android:id="@+id/delete_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text_view"
        android:layout_alignTop="@id/current_condition_text_view"
        android:layout_alignBottom="@id/current_condition_text_view"
        android:layout_alignEnd="@id/stock_text_view"
        android:layout_marginStart="20dp"
        android:paddingHorizontal="20dp"
        android:layout_toEndOf="@id/current_condition_text_view"
        android:background="@drawable/round_button_red"
        android:text="@string/delete_an_item"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/condition_text_view"
        android:paddingHorizontal="40dp"
        android:layout_marginBottom="10dp"
        android:weightSum="2"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/edit_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/edit_item" />
    </LinearLayout>

</RelativeLayout>