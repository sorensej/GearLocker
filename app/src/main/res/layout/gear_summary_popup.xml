<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue"
    android:backgroundTint="@color/colorDarkBlue">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="La Sportiva Tarantulaces"
        android:textAlignment="center"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/title_text_view"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp"
        android:text="@string/demo_item_description"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/item_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/divider"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/description_text_view"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/ic_gear" />

    <TextView
        android:id="@+id/stock_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_photo"
        android:layout_alignStart="@id/item_photo"
        android:layout_alignEnd="@id/item_photo"
        android:layout_alignBottom="@id/description_text_view"
        android:text="@string/demo_stock_information"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/condition_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text_view"
        android:layout_alignStart="@id/description_text_view"
        android:text="@string/condition"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/current_condition_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text_view"
        android:layout_alignEnd="@id/description_text_view"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/condition_text_view"
        android:background="@color/colorGreen"
        android:text="@string/condition_new"
        android:textSize="20sp" />

    <Button
        android:id="@+id/delete_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text_view"
        android:layout_alignTop="@id/current_condition_text_view"
        android:layout_alignEnd="@id/stock_text_view"
        android:layout_alignBottom="@id/current_condition_text_view"
        android:layout_marginStart="40dp"
        android:layout_toRightOf="@id/current_condition_text_view"
        android:background="@color/colorRed"
        android:text="@string/delete_an_item"
        android:textSize="12sp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/condition_text_view"
        android:layout_alignStart="@id/current_condition_text_view"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:text="@android:string/cancel" />

    <Button
        android:id="@+id/edit_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/condition_text_view"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/cancel_button"
        android:background="@color/colorPrimaryDark"
        android:text="@string/edit_item" />

</RelativeLayout>